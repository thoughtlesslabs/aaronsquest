-- game functions

--  check if the player can move
function can_move(x,y)
	return not is_tile(wall,x,y)
end

-- check for tile type
function is_tile(tile_type,x,y)
	tile = mget(x,y)
	for i=1,#tile_type do
		if tile == tile_type[i] then
			return true
		end
	end
	return false
end

-- interaction options based
-- on the tile
function interact(x,y)
	if is_tile(crate,x,y) then
		move_crate(x,y)
	elseif is_tile(door,x,y) then
	 swap_tile(x,y)
	end
end
		
		
-- swap and unswap tiles
function swap_tile(x,y)
	tile = mget(x,y)
	mset(x,y,tile+1)
end

-- push a crate
function move_crate(x,y)
	nx = x
	ny = y
	
	if push == "left" then
		nx +=1
	elseif push == "right" then
	 nx -=1
	elseif push == "up" then
		ny -=1
	elseif push == "down" then
		ny +=1
	end
	if can_move(nx,ny) then
		mset(x,y,tile)
		mset(nx,ny,21)
	end
end


	
