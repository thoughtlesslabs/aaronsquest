function make_player()
	p = {}
	p.x = 1
	p.y = 1
	p.sprite = 8
end


-->8
-- update functions

function update_menu()
	if btnp(5) then
		_update60 = update_game
		_draw = draw_game
	end
end

function update_game()
	move_player()
end

function move_player()
	
	newx = p.x
	newy = p.y
	

	if btnp(0) then newx -=1 end
	if btnp(1) then newx +=1 end
	if btnp(2) then newy -=1 end
	if btnp(3) then newy +=1 end
	
	
	p.x = mid(0,newx,127)
	p.y = mid(0,newy,63)
end
-->8
-- draw functions

function draw_menu()
	cls()
	print("press ‚ùé to start",20,69,9)
end

function draw_game()
	cls()
	draw_map()
	draw_player()
end

function draw_map()

	mapx = flr(p.x/16)*16
	mapy = flr(p.y/16)*16
	
	camera(mapx*8,mapy*8)
	
	map(0,0,0,0,128,64)
end

function draw_player()
	spr(p.sprite,p.x*8,p.y*8)
end
